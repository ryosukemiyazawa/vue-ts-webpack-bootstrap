{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
		"noImplicitReturns": true,
		"noImplicitAny" : false,
		"allowJs" : true,
		"allowSyntheticDefaultImports" : true,
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es5",
        "experimentalDecorators": true,
		"lib":["dom", "es5", "es2015.promise"],
		"baseUrl": "./",
		"paths": { 
			"@/*": ["src/*"]
		}
    },
    "include": [
		"./src/**/*"
    ]
}